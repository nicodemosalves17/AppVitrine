#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp

<UsuarioScreen@Screen>:
    canvas.before:
        Color:
            rgba: 1, 0.647, 0, 1  # #ffa500
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(10)

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            Label:
                text: "Usu√°rio"
                color: 0,0,0,1
            TextInput:
                id: usuario
                multiline: False
            Label:
                text: "Senha"
                color: 0,0,0,1
            TextInput:
                id: senha
                multiline: False
                password: True
            Label:
                text: "Perfil"
                color: 0,0,0,1
            Spinner:
                id: perfil
                text: "usuario"
                values: ["usuario", "admin"]
        Label:
            id: msg
            text: ""
            markup: True
            color: 1,0,0,1
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)
            Button:
                text: "Cadastrar"
                on_release: root.cadastrar_usuario()
            Button:
                text: "Cancelar"
                on_release: root.manager.current = 'vitrine'