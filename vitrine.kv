#:import dp kivy.metrics.dp

<VitrineScreen@Screen>:
    canvas.before:
        Color:
            rgba: 1, 0.647, 0, 1  # #ffa500
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(10)

        # Botões legados (invisíveis, se ainda usados no Python)
        BoxLayout:
            size_hint_y: None
            height: 0
            spacing: 0
            Button:
                id: btn_cadastro
                opacity: 0
                disabled: True
                size_hint_y: None
                height: 0
            Button:
                id: btn_cad_usuario
                opacity: 0
                disabled: True
                size_hint_y: None
                height: 0

        ScrollView:
            GridLayout:
                id: produtos_box
                cols: 3
                spacing: dp(15)
                padding: [dp(15), dp(10), dp(15), dp(10)]
                size_hint_y: None
                height: self.minimum_height