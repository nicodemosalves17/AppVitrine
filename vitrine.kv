#:import dp kivy.metrics.dp

<VitrineScreen@BaseScreen>:
    titulo: "Produtos"

    # O conteúdo vai para o content_area do template base!
    BoxLayout:
        id: content_area
        orientation: 'vertical'
        spacing: dp(10)

        # Botões legados (invisíveis, se ainda usados no Python)
        BoxLayout:
            size_hint_y: None
            height: 0
            spacing: 0
            Button:
                id: btn_cadastro
                opacity: 0
                disabled: True
                size_hint_y: None
                height: 0
            Button:
                id: btn_cad_usuario
                opacity: 0
                disabled: True
                size_hint_y: None
                height: 0

        ScrollView:
            GridLayout:
                id: produtos_box
                cols: 3
                spacing: dp(15)
                padding: [dp(15), dp(10), dp(15), dp(10)]
                size_hint_y: None
                height: self.minimum_height