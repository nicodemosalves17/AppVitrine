#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp

<RelatorioScreen>:
    canvas.before:
        Color:
            rgba: 1, 0.647, 0, 1  # #ffa500
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: dp(10)
        BoxLayout:
            size_hint_y: None
            height: "40dp"
            spacing: 10
            Button:
                text: "Exportar Excel"
                on_release: root.exportar_excel()
            Button:
                text: "Exportar PDF"
                on_release: root.exportar_pdf()
            Button:
                text: "Backup DB"
                on_release: root.criar_backup()
            Button:
                text: "Voltar"
                on_release: root.manager.current = 'vitrine'
        TabbedPanel:
            do_default_tab: False
            TabbedPanelItem:
                text: "Hist√≥rico"
                ScrollView:
                    do_scroll_x: True
                    do_scroll_y: True
                    GridLayout:
                        id: historico_grid
                        cols: 1
                        size_hint_x: None
                        width: self.minimum_width
                        size_hint_y: None
                        height: self.minimum_height
            TabbedPanelItem:
                text: "Top Produtos"
                ScrollView:
                    do_scroll_x: True
                    do_scroll_y: True
                    GridLayout:
                        id: top_grid
                        cols: 1
                        size_hint_x: None
                        width: self.minimum_width
                        size_hint_y: None
                        height: self.minimum_height
            TabbedPanelItem:
                text: "Estoque"
                ScrollView:
                    do_scroll_x: True
                    do_scroll_y: True
                    GridLayout:
                        id: estoque_grid
                        cols: 1
                        size_hint_x: None
                        width: self.minimum_width
                        size_hint_y: None
                        height: self.minimum_height