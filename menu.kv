#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp

<TopMenu@BoxLayout>:
    size_hint_y: None
    height: dp(48)
    padding: [dp(8), dp(6), dp(8), dp(6)]
    spacing: dp(8)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.03
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        id: btn_menu
        text: "â˜°"
        size_hint_x: None
        width: dp(60)
        font_size: sp(24)
        on_release: app.open_main_menu(self)
        opacity: 1 if app.is_admin else 0
        disabled: not app.is_admin
        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 0.1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(8)]

    Widget:
        size_hint_x: 1

    Button:
        text: "Sair"
        size_hint_x: None
        width: dp(110)
        font_size: sp(16)
        on_release: app.logout()